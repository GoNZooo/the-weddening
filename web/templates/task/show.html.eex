<h2>Show task</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @task.title %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>

  <li>
    <strong>Status:</strong>
    <%= if @task.status do "Done" else "Not done" end %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @users[@task.user_id] %>
  </li>

</ul>

<%= link "Edit", to: task_path(@conn, :edit, @task) %>
<%= link "Back", to: @back_path %>
